# NestJS API Environment Configuration
# Copy to .env for local development

# Basic Configuration
NODE_ENV=development
PORT=3000

# Frontend URLs for CORS (update with your actual URLs)
CLIENT_SHOP_URL=http://localhost:4200
ADMIN_PANEL_URL=http://localhost:4201

# Performance Configuration
MEMORY_THRESHOLD=524288000
LOG_LEVEL=debug
ENABLE_COMPRESSION=true
ENABLE_HELMET=true

# Firebase Configuration
# Option 1: Firebase Service Account JSON (Recommended for Render.com)
# Uncomment and paste your Firebase service account JSON (minified, single line)
# FIREBASE_CONFIG={"type":"service_account","project_id":"your-project-id","private_key_id":"...","private_key":"-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n","client_email":"firebase-adminsdk-xxx@your-project.iam.gserviceaccount.com","client_id":"...","auth_uri":"https://accounts.google.com/o/oauth2/auth","token_uri":"https://oauth2.googleapis.com/token","auth_provider_x509_cert_url":"https://www.googleapis.com/oauth2/v1/certs","client_x509_cert_url":"...","universe_domain":"googleapis.com"}

# Firebase URLs (Optional - auto-generated from project ID if not specified)
FIREBASE_DATABASE_URL=https://your-project-id-default-rtdb.firebaseio.com
FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com

# Option 2: Individual Environment Variables (Fallback - not recommended)
# FIREBASE_PROJECT_ID=your-project-id
# FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
# FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxx@your-project.iam.gserviceaccount.com

# Database Configuration (when implemented)
# DATABASE_URL=postgresql://user:password@localhost:5432/shoestore
# DB_POOL_MIN=2
# DB_POOL_MAX=10

# Redis Configuration (when implemented)
# REDIS_URL=redis://localhost:6379
# REDIS_TTL=3600

# Authentication (when implemented)
# JWT_SECRET=your-super-secret-jwt-key
# JWT_EXPIRES_IN=24h

# External Services (when implemented)
# PAYMENT_GATEWAY_URL=
# PAYMENT_GATEWAY_KEY=
# EMAIL_SERVICE_URL=
# EMAIL_SERVICE_KEY=

# Monitoring & Analytics (when implemented)
# DATADOG_API_KEY=
# SENTRY_DSN=
# ANALYTICS_TRACKING_ID=
