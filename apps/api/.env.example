# NestJS API Environment Configuration
# Copy to .env for local development

# Basic Configuration
NODE_ENV=development
PORT=3000

# Frontend URLs for CORS (update with your actual URLs)
CLIENT_SHOP_URL=http://localhost:4200
ADMIN_PANEL_URL=http://localhost:4201

# Performance Configuration
MEMORY_THRESHOLD=524288000
LOG_LEVEL=debug
ENABLE_COMPRESSION=true
ENABLE_HELMET=true

# Database Configuration (when implemented)
# DATABASE_URL=postgresql://user:password@localhost:5432/shoestore
# DB_POOL_MIN=2
# DB_POOL_MAX=10

# Redis Configuration (when implemented)
# REDIS_URL=redis://localhost:6379
# REDIS_TTL=3600

# Authentication (when implemented)
# JWT_SECRET=your-super-secret-jwt-key
# JWT_EXPIRES_IN=24h

# External Services (when implemented)
# PAYMENT_GATEWAY_URL=
# PAYMENT_GATEWAY_KEY=
# EMAIL_SERVICE_URL=
# EMAIL_SERVICE_KEY=

# Monitoring & Analytics (when implemented)
# DATADOG_API_KEY=
# SENTRY_DSN=
# ANALYTICS_TRACKING_ID=
