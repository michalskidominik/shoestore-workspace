{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "installCommand": "npm install --ignore-scripts",
  "buildCommand": "npm run build:vercel",
  "ignoreCommand": "echo 'Skipping cache to force fresh build'",
  "framework": null,
  "git": {
    "deploymentEnabled": {
      "master": true,
      "develop": true
    }
  },
  "outputDirectory": "dist-vercel",
  "headers": [
    {
      "source": "/(.*\\.(js|css|html))",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ],
      "missing": [
        {
          "type": "header",
          "key": "x-vercel-cache"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/client-shop",
      "destination": "/client-shop/index.html"
    },
    {
      "source": "/client-shop/((?!\\.well-known(?:/.*)?)(?![^/]*\\.[^/]*$).*)",
      "destination": "/client-shop/index.html"
    },
    {
      "source": "/admin-panel",
      "destination": "/admin-panel/index.html"
    },
    {
      "source": "/admin-panel/((?!\\.well-known(?:/.*)?)(?![^/]*\\.[^/]*$).*)",
      "destination": "/admin-panel/index.html"
    }
  ]
}
